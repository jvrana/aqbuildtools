{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Part JSON",
  "description": "JSON schema for defining DNA parts.",
  "type": "object",
  "definitions": {
    "roles": {
      "type": "array",
      "description": "List of valid ontology roles",
      "items": {
        "type": "string",
        "enum": [
          "Promoter",
          "RBS",
          "CDS",
          "Terminator",
          "Gene",
          "Operator",
          "Engineered Gene",
          "mRNA",
          "Effector",
          "Trascription Factor",
          "Binding Site",
          "Primer",
          "Primer Binding Site",
          "Engineered Region"
        ]
      }
    },
    "basic_part": {
      "description": "A basic DNA part with a sequence, source, and role",
      "properties": {
            "part_type": {
              "type": "string",
              "enum": [
                "basic part"
              ]
            },
            "sequence": {
              "type": "string",
              "description": "The DNA sequence for the part.",
              "pattern": "^[AGTCacgtnN]+$"
            },
            "source": {
              "type": "string",
              "description": "Source of the DNA part (optional)."
            },
            "length": {
                "type": "number",
                "minimum": 0
            },
            "roles": {
              "$ref": "#/definitions/roles"
            }
          },
          "required": [
            "sequence"
          ]
        },
    "composite_part": {
      "description": "A composite DNA part composed of many basic_parts or composite_parts",
      "properties": {
            "part_type": {
              "type": "string",
              "enum": [
                "composite part"
              ]
            },
            "parts": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            }
          },
    "required": [
            "parts"
          ]
        },
    "part": {
        "type": "object",
        "description": "Properties all 'parts' have.",
        "allOf": [
        {
          "properties": {
            "name": {
              "type": "string"
            },
            "collection": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "part_type": {
              "type": "string",
              "enum": [
                "composite part",
                "basic part"
              ]
            }
          },
          "required": [
            "name",
            "collection",
            "description",
            "part_type"
          ]
        },
        {
          "if": {
            "properties": {
              "part_type": {
                "const": "composite part"
              }
            }
          },
          "then": {
            "$ref": "#/definitions/composite_part"
          }
        },
        {
          "if": {
            "properties": {
              "part_type": {
                "const": "basic part"
              }
            }
          },
          "then": {
            "$ref": "#/definitions/basic_part"
          }
        }
      ]
    }
  },
  "$ref": "#/definitions/part"
}